{
  "name": "dicomanon",
  "version": "0.3.6",
  "license": "AGPL-3.0-only",
  "description": "Radiopaedia DICOM Anonymizer",
  "author": "plwp",
  "main": "lib/index.js",
  "scripts": {
    "start": "node server.mjs",
    "typecheck": "npm run tsc --noEmit",
    "build": "npm run esbuild",
    "esbuild_docs": "esbuild src/browser.ts --bundle --sourcemap --outfile=docs/js/main.js",
    "esbuild": "esbuild src/index.ts --bundle --sourcemap --outfile=lib/index.js --minify-whitespace --minify-identifiers --minify-syntax && npm run esbuild_docs",
    "test": "jest --silent=false"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "file-saver": "^2.0.2",
    "jest": "^29.7.0",
    "prettier": "^2.1.2",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "esbuild": "^0.25.5",
    "esm": "^3.2.25"
  }
}
